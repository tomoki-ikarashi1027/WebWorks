    <div class="search-box col-lg-4 item">
      <div class="search-box__inner">
        <div class="name-search">
          <%= form_tag(prefectures_search_path, :method => "get") do %>
          <%= text_field_tag :search ,'', placeholder: "会社名を入力" , required: true%>
          <%= submit_tag "Search" %>
          <% end %>
        </div>
        <div class="tag-search">
          <%= form_tag(prefectures_search_path, :method => "get") do %>
          <%= select_tag :language_tag_id,  options_from_collection_for_select(@languages, :id, :language, params[:language_tag_id]), prompt:  'プログラミング言語で絞り込み' %>
          <%= submit_tag "Search" %>
          <% end %>

          <%= form_tag(prefectures_search_path, :method => "get") do %>
          <%= select_tag :framework_tag_id,  options_from_collection_for_select(@frameworks, :id, :framework, params[:framework_tag_id]), prompt:  'フレームワークで絞り込み'%>
