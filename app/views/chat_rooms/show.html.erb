<div class="wrapper">

  <div class="chat-room">
    <div class="chat-room__header">
      <nav class="chat-room__nav-left">
        <%= link_to :back do %>
        <i class="fas fa-chevron-left"></i>
        <% end %>
        <%= @chat_room_user.name %>
      </nav>
      <nav class="chat-room__nav-right">
        <% if @chat_room_user.profile_image? %>
        <%= image_tag @chat_room_user.profile_image.url ,class: 'talk-user-img' %>
        <% else %>
        <div class="user-default-img"></div>
        <% end %>
      </nav>
    </div>

    <div id='chat-messages'>
      <%= render @chat_messages %>
    </div>

    <!--
    <form class="chat-room__form">
      <textarea data-behavior="chat_room_speaker" data-chat_room_id="<%= @chat_room.id %>" placeholder="メッセージを入力"
        class="chat-room__message-form_textarea"></textarea>
      <i class="fas fa-paper-plane"></i>
    </form>
    -->
    <form class="chat-room__form">
      <textarea data-behavior="chat_room_speaker" data-chat-room-id="<%= @chat_room.id  %>" placeholder="メッセージを入力"
        class="chat-room__message-form_textarea" id="message-content"></textarea>
      <i class="fas fa-paper-plane"></i>
    </form>

    <div class="form-bottom"></div>
  </div>
</div>