<div class="wrapper">
  <div class="calendar">
    <h1 class="animate-title">My Calendar</h1>
    <button type="button" class="btn shadow index-btn" data-toggle="modal" data-target="#exampleModal">
      予定を記入
    </button>
    <%= month_calendar events: events do |date, events| %>
    <%= date.day %>
    <% events.each do |event| %>
    <div>
      <%= link_to event.title, event %>
      <%= link_to event_path(event)  ,method: :delete , data: {confirm: "Are you sure?"}  ,remote: true do %><i
        class="fas fa-trash"></i>
      <% end %>
    </div>
    <% end %>
    <% end %>
  </div>
</div>