<div id="content">
  <div class="hero">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        <!-- Slides -->
        <div class="swiper-slide">
          <div class="hero__title">転職先を見つけよう</div>
          <%= image_tag 'Search.jpg' %>
        </div>
        <div class="swiper-slide">
          <div class="hero__title">カレンダーに予定を記入</div>
          <%= image_tag 'Calendar.jpg' %>
        </div>
        <div class="swiper-slide">
          <div class="hero__title">タスク管理</div>
          <%= image_tag 'Todo.jpg' %>
        </div>
        <div class="swiper-slide">
          <div class="hero__title">会社のレビューを確認</div>
          <%= image_tag 'Review.jpg' %>
        </div>
        <div class="swiper-slide">
          <div class="hero__title">必要なことは忘れないようにメモ</div>
          <%= image_tag 'Memo.jpg' %>
        </div>
      </div>
      <div class="hero__footer">
        <%= image_tag 'arrow.svg' ,class: "hero__downarrow" %>
        <span class="hero__scrolltext">scroll</span>
      </div>
    </div>
  </div>
  <div id="main-content">
    <aside class="side left">
      <div class="side__inner">
        <a class="twitter icon animate-title" href="https://twitter.com/home?lang=ja">Twitter</a>
      </div>
    </aside>
    <main>
      <section class="about">
        <div class="about__inner">
          <div class="about__img cover-slide ">
            <%= image_tag 'faq.jpg', class:"img-zoom" %>
          </div>
          <div class="about__texts appear left">
            <div class="about__texts-inner">
              <div class="about__title main-title item">
                <span>Let's</span>
                <span>ChangeWork</span>
              </div>
              <div class="about__subtitle subtitle item">仕事を変えよう</div>
              <div class="about__description item">
                <p>プログラマーの転職を効率的に。</p>
                <p>きっとあなたに合った会社があります</p>
              </div>
              <div class="item">
                <button class="btn slide-bg"><%= link_to "当サイトについて",  homes_about_path %></button>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="company">
        <div>
          <h2 class="main-title animate-title">Big City</h2>
          <p class="sub-title animate-title">大都市で探そう</p>
        </div>
        <div class="company__inner appear">
          <div class="company__item">
            <div class="cover-slide ">
              <%= image_tag 'tokyo.jpg' ,class: "img-zoom" %>
            </div>
            <p>東京都</p>
          </div>
          <div class="company__item">
            <div class="cover-slide">
              <%= image_tag 'osaka.jpg' ,class: "img-zoom" %>
            </div>
            <p>大阪府</p>
          </div>
          <div class="company__item">
            <div class="cover-slide">
              <%= image_tag 'kanagawa.jpg' ,class: "img-zoom" %>
            </div>
            <p>神奈川県</p>
          </div>
          <div class="company__item">
            <div class="cover-slide">
              <%= image_tag 'fukuoka.jpg' ,class: "img-zoom" %>
            </div>
            <p>福岡県</p>
          </div>
          <div class="company__item">
            <div class="cover-slide">
              <%= image_tag 'hokkaido.jpg' ,class: "img-zoom" %>
            </div>
            <p>北海道</p>
          </div>
          <div class="company__item">
            <div class="cover-slide">
              <%= image_tag 'aichi.jpg' ,class: "img-zoom" %>
            </div>
            <p>愛知県</p>
          </div>
          <button class="btn filled">
            <%= link_to "全国から探す", prefectures_path %>
          </button>
        </div>
      </section>
      <section class="job-site">
        <header>
          <h2 class="main-title animate-title">タスク管理</h2>
          <p class="sub-title">好みのタスク管理ツールを使いましょう！</p>
        </header>
        <div class="job-site__inner appear up">
          <div class="job-site__container">
            <div class="job-site__item item">
              <%= link_to events_path do%>
              <div class="job-site__img">
                <%= image_tag 'calendar2.jpg' %>
              </div>
              <div class="job-site__title">Calendar</div>
              <% end %>
            </div>
            <div class="job-site__item item">
              <%= link_to homes_task_path do%>
              <div class="job-site__img">
                <%= image_tag 'todo2.jpg' %>
              </div>
              <div class="job-site__title">Todo List</div>
              <% end %>
            </div>
            <div class="job-site__item item">
              <%= link_to homes_memo_path do%>
              <div class="job-site__img">
                <%= image_tag 'memo2.jpg' %>
              </div>
              <div class="job-site__title">Memo</div>
              <% end %>
            </div>
          </div>
        </div>
      </section>
    </main>
    <aside class="side right">
      <div class="side__inner">
        <a class="facebook icon animate-title" href="https://ja-jp.facebook.com/">Facebook</a>
      </div>
    </aside>
  </div>
</div>