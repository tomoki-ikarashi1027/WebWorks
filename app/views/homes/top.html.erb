<div id="global-container">
  <div id="container">
    <div class="mobile-menu__cover"></div>
    <div class="nav-triger"></div>
    <header class="header">
      <div class="header__inner">
        <div class="logo">
          <%= image_tag 'logo.svg', class: "logo__img" %>
          <span class="logo__web">Web</span>
          <span class="logo__works">Works</span>
        </div>
        <nav class="header__nav">
          <ul class="header__ul">
            <li class="header__li">Service</li>
            <li class="header__li">Company</li>
            <li class="header__li"> <a class="btn filled" href="#">Contact</a></li>
          </ul>
        </nav>
        <button class="mobile-menu__btn">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </header>
    <div id="content">
      <div class="hero">
        <div class="swiper-container">
          <div class="swiper-wrapper">
            <!-- Slides -->
            <div class="swiper-slide">
              <div class="hero__title">Enjoy</div>
              <%= image_tag 'image-2.jpg' %>
            </div>
            <div class="swiper-slide">
              <div class="hero__title">Enjoy2</div>
              <%= image_tag 'image-2.jpg' %>
            </div>
            <div class="swiper-slide">
              <div class="hero__title">Enjoy3</div>
              <%= image_tag 'image-2.jpg' %>
            </div>
          </div>
          <div class="hero__footer">
            <%= image_tag 'arrow.svg' ,class: "hero__downarrow" %>
            <span class="hero__scrolltext">scroll</span>
          </div>
        </div>
      </div>
      <div id="main-content">
        <main>
          <section class="about">
            <div class="about__inner">
              <div class="about__img cover-slide inview ">
                <%= image_tag 'image-3.jpg', class:"about-img  " %>
              </div>
              <div class="about__texts">
                <div class="about__texts-inner">
                  <div class="about__title main-title">
                    <span>Let's</span>
                    <span>ChangeWork</span>
                  </div>
                  <div class="about__subtitle subtitle">仕事を変えよう</div>
                  <div class="about__description">
                    <p>全国のWEB企業を探せるサービスです</p>
                    <p>きっとあなたを探している会社があります</p>
                  </div>
                  <button class="btn slide-bg">もっと詳しく</button>
                </div>
              </div>
            </div>
          </section>
          <section class="company">
            <div>
              <h2 class="main-title animate-title">Big City</h2>
              <p class="sub-title animate-title">大都市で探そう</p>
            </div>
            <div class="company__inner">
              <div class="company__item">
                <div class="cover-slide inview">
                  <%= image_tag 'image-2.jpg'%>
                </div>
                <p>title1</p>
              </div>
              <div class="company__item">
                <div class="cover-slide inview">
                  <%= image_tag 'image-2.jpg'%>
                </div>
                <p>title2</p>
              </div>
              <div class="company__item">
                <div class="cover-slide inview">
                  <%= image_tag 'image-2.jpg'%>
                </div>
                <p>title3</p>
              </div>
              <div class="company__item">
                <div class="cover-slide inview">
                  <%= image_tag 'image-2.jpg'%>
                </div>
                <p>title4</p>
              </div>
              <div class="company__item">
                <div class="cover-slide inview">
                  <%= image_tag 'image-2.jpg'%>
                </div>
                <p>title5</p>
              </div>
              <div class="company__item">
                <div class="cover-slide inview">
                  <%= image_tag 'image-2.jpg'%>
                </div>
                <p>title6</p>
              </div>
              <button class="btn filled">全国から探す</button>
            </div>
          </section>
          <section class="job-site">
            <header>
              <h2 class="main-title">転職サイト</h2>
              <p class="sub-title">自分に合った転職サイトで探そう</p>
            </header>
            <div class="job-site__inner">
              <div class="job-site__container">
                <div class="job-site__item">
                  <div class="job-site__img">
                    <%= image_tag 'image-2.jpg' %>
                  </div>
                  <div class="job-site__title">title1</div>
                </div>
                <div class="job-site__item">
                  <div class="job-site__img">
                    <%= image_tag 'image-2.jpg' %>
                  </div>
                  <div class="job-site__title">title2</div>
                </div>
                <div class="job-site__item">
                  <div class="job-site__img">
                    <%= image_tag 'image-2.jpg' %>
                  </div>
                  <div class="job-site__title">title3</div>
                </div>
                <div class="job-site__item">
                  <div class="job-site__img">
                    <%= image_tag 'image-2.jpg' %>
                  </div>
                  <div class="job-site__title">title4</div>
                </div>
                <div class="job-site__btn">
                  <button class="btn cover-3d">
                    <span>
                      もっと見る
                    </span>
                  </button>
                </div>
              </div>
            </div>
          </section>
        </main>
      </div>
      <footer class="footer">
        <div class="logo">
          <%= image_tag 'logo.svg', class: "logo__img" %>
          <span class="logo__web">Web</span>
          <span class="logo__works">Works</span>
        </div>
        <nav class="footer__nav">
          <div class="footer__ul">
            <div class="footer__li">サービス</div>
            <div class="footer__li">Company</div>
            <div class="footer__li">Contact</div>
            <div class="footer__li">Sitemap</div>
          </div>
          <div class="footer__copyright">&copy; Ikarashi</div>
        </nav>
    </div>
  </div>
  <nav class="mobile-menu">
    <div class="logo">
      <%= image_tag 'logo.svg', class: "logo__img" %>
      <span class="logo__web">Web</span>
      <span class="logo__works">Works</span>
    </div>
    <ul class="mobile-menu__main">
      <li class="mobile-menu__item">
        <span class="main-title">Our Service</span>
        <span class="sub-title">サービスについて</span>
      </li>
      <li class="mobile-menu__item">
        <span class="main-title">About Us</span>
        <span class="sub-title">私たちについて</span>
      </li>
      <li class="mobile-menu__item">
        <span class="main-title">Contact Us</span>
        <span class="sub-title">コンタクト方法</span>
      </li>
    </ul>
  </nav>
</div>
