<div id="global-container">
  <div id="container">
    <div class="mobile-menu__cover"></div>
    <div class="nav-triger"></div>
    <header class="header">
      <div class="header__inner">
        <div class="logo">
          <%= image_tag 'logo.svg', class: "logo__img" %>
          <span class="logo__web">Web</span>
          <span class="logo__works">Works</span>
        </div>
        <nav class="header__nav">
          <ul class="header__ul">
            <li class="header__li">Service</li>
            <li class="header__li">Company</li>
            <li class="header__li"> <a class="btn filled" href="#">Contact</a></li>
          </ul>
        </nav>
        <button class="mobile-menu__btn">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </header>
    <div id="content">
      <div class="hero">
        <div class="swiper-container">
          <div class="swiper-wrapper">
            <!-- Slides -->
            <div class="swiper-slide">
              <div class="hero__title">Enjoy</div>
              <%= image_tag 'image-2.jpg' %>
            </div>
            <div class="swiper-slide">
              <div class="hero__title">Enjoy2</div>
              <%= image_tag 'image-2.jpg' %>
            </div>
            <div class="swiper-slide">
              <div class="hero__title">Enjoy3</div>
              <%= image_tag 'image-2.jpg' %>
            </div>
          </div>
          <div class="hero__footer">
            <%= image_tag 'arrow.svg' ,class: "hero__downarrow" %>
            <span class="hero__scrolltext">scroll</span>
          </div>
        </div>
      </div>
      <div id="main-content">
        <main>
          <section class="about">
            <div class="about__inner">
              <div class="about__img">
                <%= image_tag 'image-3.jpg', class:"about-img" %>
              </div>
              <div class="about__texts">
                <div class="about__texts-inner">
                  <div class="about__title main-title">
                    <span>Let's</span>
                    <span>ChangeWork</span>
                  </div>
                  <div class="about__subtitle subtitle">仕事を変えよう</div>
                  <div class="about__description">
                    <p>全国のWEB企業を探せるサービスです</p>
                    <p>きっとあなたを探している会社があります</p>
                  </div>
                  <button>もっと詳しく</button>
                </div>
              </div>
            </div>
          </section>
        </main>
      </div>
    </div>
    <nav class="mobile-menu">
      <div class="logo">
        <%= image_tag 'logo.svg', class: "logo__img" %>
        <span class="logo__web">Web</span>
        <span class="logo__works">Works</span>
      </div>
      <ul class="mobile-menu__main">
        <li class="mobile-menu__item">
          <span class="main-title">Our Service</span>
          <span class="sub-title">サービスについて</span>
        </li>
        <li class="mobile-menu__item">
          <span class="main-title">About Us</span>
          <span class="sub-title">私たちについて</span>
        </li>
        <li class="mobile-menu__item">
          <span class="main-title">Contact Us</span>
          <span class="sub-title">コンタクト方法</span>
        </li>
      </ul>
    </nav>
  </div>
