  <div class="wrapper">
    <div class="wrapper__inner">
      <div class="notifications">
        <div class="notifications__header">
          <nav>
            <%= link_to :back do %>
            <i class="fas fa-chevron-left"></i>
            <% end %>
          </nav>
          <nav class="notifications__nav-center">
            notification
          </nav>
          <nav class="notifications__nav-right">
            <%= link_to '全削除' ,notifications_destroy_all_path ,method: :delete %>
          </nav>
        </div>

        <% notifications = @notifications.where.not(visitor_id: current_user.id) %>
        <% if notifications.exists? %>
        <%= render notifications  %>
        <% else %>
        <p class="notifications__elsemessage">現在、通知メッセージはありません</p>
        <% end %>
      </div>
    </div>
  </div>